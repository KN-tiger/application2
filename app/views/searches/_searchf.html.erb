<% if user_signed_in? %>
  <div class="search_form">
    <%= form_tag(search_path, local: true, method: :get) do %>
      <%= text_field_tag :word %>
      <%= select_tag :range, options_for_select([['User'], ['Book']]) %>
      <%= select_tag :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= submit_tag "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>